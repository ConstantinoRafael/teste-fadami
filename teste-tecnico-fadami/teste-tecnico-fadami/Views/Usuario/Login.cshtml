@model LoginModel
@{
    ViewData["Title"] = "Tela de login";
}


<div class="text-center">
    <h1 class="display-4">Login</h1>
</div>


@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-secondary btn-sm close-alert" arial-label="close">X</button>
        @TempData["MensagemErro"]
    </div>
}

<form asp-controller="Usuario" asp-action="Entrar" method="post">
    <div class="mb-3">
        <label for="login">Login</label>
        <input type="text" asp-for="LOGIN" class="form-control" id="login" placeholder="Seu login">
        @Html.ValidationMessageFor(x => x.LOGIN)
    </div>
    <div class="mb-3">
        <label for="senha">Senha</label>
        <input type="password" asp-for="SENHA" class="form-control" id="senha" placeholder="Sua senha">
        @Html.ValidationMessageFor(x => x.SENHA)
    </div>

    <button type="submit" class="btn btn-primary btn-block">Enviar</button>
</form>

    
